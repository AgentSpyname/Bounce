<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

<div class="form-inputs">
    <%= f.input :first_name, wrapper: :horizontal_input_group do %>
      <%= f.input_field :first_name, class: "form-control" %>
       <% end %>
      </div>
      <br />
      <br/>

      <div class="form-inputs">
    <%= f.input :last_name, wrapper: :horizontal_input_group do %>
      <%= f.input_field :last_name, class: "form-control" %>
       <% end %>
      </div>
      <br />
      <br/>
       <div class="form-inputs">
    <%= f.input :username, wrapper: :horizontal_input_group do %>
      <%= f.input_field :username, class: "form-control", disabled: true, hint: 'You cannot change your username.' %> <i>You cannot change your username.<br /></i>
       <% end %>
      </div>
      <br />
      <br/>
<br />
  <div class="form-inputs">
    <%= f.input :email, wrapper: :horizontal_input_group do %>
      <%= f.input_field :email, class: "form-control" %>
       <% end %>
      </div>
      <br />
      <br/>

      <div class="form-inputs">
    <%= f.input :password, wrapper: :horizontal_input_group do %>
      <%= f.input_field :password, class: "form-control" %><i>Leave blank if you are not changing your password.</i>
       <% end %>
      </div>
<br />
<br />

<div class="form-inputs">
    <%= f.input :password_confirmation, wrapper: :horizontal_input_group do %>
      <%= f.input_field :password_confirmation, class: "form-control" %><i>Leave blank if you are not changing your password.</i>
       <% end %>
      </div>
<br />
<br />

<div class="form-inputs">
    <%= f.input :current_password, wrapper: :horizontal_input_group do %>
      <%= f.input_field :current_password, class: "form-control" %>
      <i>(we need your current password to confirm your changes)</i>
       <% end %>
      </div><br /> <br /> <br />
      <br />
      <%= image_tag @user.gravatar_url %>
    <a href="http://gravatar.com/emails">change</a>
    <br />
    <br />
      <%= f.submit "Update", class: 'btn btn-primary' %>


 <hr />


 
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <a href="#">Contact Alexander or Emma First</a> and if you are still not satisfied, you can cancel your account. We are sad to see you go :(<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %></p>

<%= link_to "Back", :back %>


