<div class="page-header clearfix">
  <div class="pull-left">
    <h1>Sign In<small> Existing User? Sign in here!</small></h1>
  </div>
 <div class="pull-right">
    <div class="btn-group">
      <%= link_to 'Sign Up', "/register", class: "btn btn-default" %>
      <%= link_to 'Forgot your Password?', "/users/password/new" ,  class: "btn btn-default" %>
    </div>
  </div>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-inputs">
    <%= f.input :email, wrapper: :horizontal_input_group do %>
      <%= f.input_field :email, class: "form-control" %>
       <% end %>
      </div>
      <br />
      <br/>

<div class="form-inputs">
    <%= f.input :password, wrapper: :horizontal_input_group do %>
      <%= f.input_field :password, class: "form-control" %>
       <% end %>
      </div>
<br />
<br />


<%= f.label  :remember_me  %>
<%= f.check_box :remember_me, :as => :boolean, :inline_label => true if devise_mapping.rememberable? %>
  <div class="form-actions col-sm-offset-3">



  </div>
</div>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
          <%= f.button :submit, "Sign In", class: 'btn btn-default' %>
    </div>
  </div>
<% end %>