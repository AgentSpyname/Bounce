 <%= link_to image_tag(user.gravatar_url), profile_path(user.username) %>   <strong><%= user.first_name + " " + user.last_name %></strong>
 <hr />
  <% end %>  

   <ul class="pagination">

<%= will_paginate @inverse_friends %>
